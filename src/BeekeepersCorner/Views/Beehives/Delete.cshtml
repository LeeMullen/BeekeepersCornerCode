@model BeekeepersCorner.Models.Beehive

@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

@{ var beekeeperID = Model.BeekeeperIDFK; }

<h2>Delete Beehive</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.BeehiveID)

        <h4>Are you sure you want to permanenetly delete this beehive?</h4>
        <div class="form-group">
            @Html.LabelFor(model => model.HiveName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.HiveName)
            </div>
        </div>
        <div>
            @Html.ActionLink("Cancel", "Beehives", routeValues: new
                   {
                       id = beekeeperID
                   },
                    htmlAttributes: null)
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Delete" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "Beehives", routeValues: new
            {
                id = beekeeperID
            },
            htmlAttributes: null)
</div>